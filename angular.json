{
  "$schema": "./node_modules/@angular-devkit/core/src/workspace/workspace-schema.json",
  "version": 1,
  "newProjectRoot": "src",
  "projects": {
    "dev": {
      "root": "",
      "projectType": "application",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/dev",
            "index": "src/dev/src/index.html",
            "main": "src/dev/src/main.ts",
            "polyfills": "src/dev/src/polyfills.ts",
            "tsConfig": "src/dev/tsconfig.dev.json",
            "assets": [
              {
                "glob": "favicon.png",
                "input": "src/dev/src",
                "output": "/"
              },
              {
                "glob": "datagrid-10k-data.min.json",
                "input": "src/dev/src/app/components/datagrid",
                "output": "/"
              },
              {
                "glob": "**/*.*",
                "input": "src/ferui-design/font-files",
                "output": "/font-files"
              }
            ],
            "styles": [
              "src/ferui-icons/ferui-icons.scss",
              "src/ferui-design/scss/ferui-design.scss",
              "src/dev/src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["node_modules", "src/ferui-design", "src/ferui-design/font-files"]
            },
            "scripts": ["node_modules/@webcomponents/custom-elements/custom-elements.min.js"]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/dev/src/environments/environment.ts",
                  "with": "src/dev/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "dev:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "dev:build:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["src/dev/tsconfig.dev.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    },
    "ferui-components": {
      "root": "src/ferui-components",
      "projectType": "library",
      "prefix": "ferui",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "project": "src/ferui-components/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "tests/tests.entry.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "codeCoverage": true
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["src/ferui-components/tsconfig.lint.json", "src/ferui-components/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "css"
    }
  },
  "defaultProject": "dev"
}
